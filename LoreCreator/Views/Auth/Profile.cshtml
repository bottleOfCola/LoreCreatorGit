@using LoreCreator.LocalizationFiles
@using LoreCreator.ViewModels

@model ProfileViewModel

@{
    Layout = "_LayoutLoreCreator";
}

<div>
    <div>
        @LCLProfile.Name
        <h2>@Model.Name</h2>
    </div>
    <div>
        @LCLProfile.Email
        <h3>@Model.Email</h3>
    </div>
    <div>
        @LCLProfile.Roles
        @foreach(var role in Model.Roles)
        {
            <div>
                <a asp-controller="Auth" asp-action="GetRole" asp-route-roleId="@role.Id">@role.Name</a>
            </div>
        }
    </div>
</div>