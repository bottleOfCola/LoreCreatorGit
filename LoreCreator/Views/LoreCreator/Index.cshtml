@using LoreCreator.ViewModels

@model IndexViewModel

@{
    Layout = "_LayoutLoreCreator";
}
<div class="lore-content">
    <div class="lore">
        Элементы:
        @if(Model.Elements.Count == 0)
        {
            <div class="fail">
                ________________<br />
                Пусто<br />
                ----------------
            </div>
        }
        else
        {
            @foreach (var element in Model.Elements)
            {
                <div class="element">
                    <div class="name">
                        <a asp-controller="LoreCreator" asp-action="GetElement" asp-route-id="@element.Id">@element.Name</a>
                    </div>
                </div>
            }
        }
    </div>
</div>